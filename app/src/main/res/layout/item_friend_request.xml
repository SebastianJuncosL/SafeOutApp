<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivRProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvRUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/ivRProfilePic"
        android:fontFamily="@font/lato_light"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btnRAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRUsername"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ivRProfilePic"
        android:fontFamily="@font/lato"
        android:text="Accept"
        android:textColor="@color/white"
        app:backgroundTint="#8FDB39" />

    <Button
        android:id="@+id/btnRReject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRUsername"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/btnRAccept"
        android:fontFamily="@font/lato"
        android:text="Reject"
        android:textColor="@color/white"
        app:backgroundTint="#FF383B" />
</RelativeLayout>